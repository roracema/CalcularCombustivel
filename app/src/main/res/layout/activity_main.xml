<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_gravity="center_horizontal"

        android:text="@string/titulo"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_column="0"
        android:layout_row="1"
        android:textSize="18sp"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:text="@string/gasolina" />


    <TextView
        android:id="@+id/gasolinaValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:textAlignment="center"
        android:layout_gravity="end"
        android:text="" />

    <SeekBar
        android:id="@+id/gasolina"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:max="50"
        android:progress="0"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_column="0"
        android:layout_row="3"
        android:textSize="18sp"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:text="@string/etanol" />

    <TextView
        android:id="@+id/alcoolValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:textAlignment="center"
        android:layout_gravity="end"
        android:text="" />

    <SeekBar
        android:id="@+id/alcool"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:max="50"
        android:progress="0" />

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:textSize="16sp"
        android:id="@+id/textView2"
        android:text="@string/recomendar" />

    <TextView
        android:id="@+id/validador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text=""
        android:fontFamily="sans-serif-black"
        />

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_gravity="center_horizontal"
        tools:srcCompat="@drawable/branco" />

</GridLayout>